<script>
  function compartilhar() {
    const titulo = 'Feliz Dia dos Pais ‚Äî Pai';
    const mensagem = `Pai, hoje √© o seu dia. Obrigado por cada ensinamento, cada abra√ßo, cada risada e por estar sempre ao meu lado. Voc√™ √© meu exemplo de for√ßa e amor. Feliz Dia dos Pais!`;
    const url = window.location.href;

    if (navigator.share) {
      navigator.share({
        title: titulo,
        text: mensagem,
        url: url
      }).catch((err) => {
        console.error('Erro ao compartilhar:', err);
        alert('Erro ao compartilhar, tente copiar manualmente.');
      });
    } else {
      const textoParaCopiar = `${titulo}\n${mensagem}\n${url}`;
      navigator.clipboard.writeText(textoParaCopiar).then(() => {
        alert('Link e mensagem copiados ‚Äî compartilhe onde quiser üòä');
      }).catch(() => {
        alert('Seu navegador n√£o suporta o compartilhamento autom√°tico. Copie manualmente o link.');
      });
    }
  }
</script>

